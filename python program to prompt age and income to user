#include<stdio.h>

int main( ){
     int age;
     float income;
      
      printf("enter your age:");
      scanf("%d",&age);
      printf("enter your annual income:");
      scanf("%f",&income);
      if(age>=21&&income>=21000){
          printf("Congratulations!You are eligible for a loan.\n");
      }else{
          printf("Unfortunately,we are unable to offer you a loan this time.\n");
      }
      return 0;
}